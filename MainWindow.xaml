<Window x:Class="GridSplitter_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridSplitter_Example"
        mc:Ignorable="d"
        Title="GridSplitter example" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<TextBox Grid.Column="0" MinWidth="100" 	Text="TextBox"/>
		<GridSplitter Grid.Column="0"  Width="2" />
		<TextBox Grid.Column="1" TextWrapping="Wrap" 
            Text="TextBox" />
	</Grid>
</Window>
